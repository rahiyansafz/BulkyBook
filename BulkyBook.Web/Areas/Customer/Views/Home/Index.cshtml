                <p class="card-title h5 text-dark">@item.Title</p>
                <p class="card-title text-info">by <b>@item.Author</b></p>
                <div>
                    <a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@item.Id">
                        Details
                    </a>
                </div>
            </div>
        </div>
