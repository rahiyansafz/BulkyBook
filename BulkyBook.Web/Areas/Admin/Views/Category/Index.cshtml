@{
    ViewData["Title"] = "Categories";
}

@model IEnumerable<Category>

<div class="container p-3 pt-2">
    <div class="row">
        <div class="col-6">
            <h3 class="display-7 text-dark font-weight-bold">List of Categories</h3>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-dark" asp-controller="Category" asp-action="Create">
                <i class="bi bi-plus-circle"></i> &nbsp;Create New Category
            </a>
        </div>
        <hr />
    </div>

    <div class="py-3 px-4">
        <table class="table">
            @*<caption>List of Categories</caption>*@
            <thead>
                <tr>
                    <th scope="col" class="text-center">Category Name</th>
                    <th scope="col" class="text-center">Display Order</th>
                    <th scope="col" class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        @*                <th scope="row">1</th>
                        *@
                        <td class="text-center">@obj.Name</td>
                        <td class="text-center">@obj.DisplayOrder</td>
                        <td class="text-center">
                            <div class="d-grid gap-2 d-md-block">
                                <a class="btn btn-outline-dark" role="button" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil"></i></a>
                                <a class="btn btn-outline-dark" role="button" asp-controller="Category" asp-action="Remove" asp-route-id="@obj.Id"><i class="bi bi-trash3"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>