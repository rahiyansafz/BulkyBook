@{
    ViewData["Title"] = "Category Create";
}

@model Category

<div class="container p-3 pt-2">
    <div class="row">
        <div class="col-6">
            <h3 class="display-7 text-dark font-weight-bold">Create Category</h3>
        </div>
        <hr />
    </div>

    <div asp-validation-summary="All"></div>

    <form method="post">
        <div class="py-3 px-4 border border-1 border-gray">
            <div>
                <fieldset>
                    <div class="form-group m-3 mt-1">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" type="text" class="form-control" id="name" aria-describedby="name" placeholder="Enter Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group m-3 mt-1">
                        <label asp-for="DisplayOrder" class="form-label"></label>
                        <input asp-for="DisplayOrder" type="number" class="form-control" id="order" placeholder="Display Order" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-dark m-2">Create</button>
                    <a class="btn btn-dark m-2" asp-controller="Category" asp-action="Index">
                        Back To List
                    </a>
                </fieldset>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}